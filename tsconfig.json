{
  "compilerOptions": {
    "baseUrl": "./packages",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    "lib": ["dom", "esnext"],
    "paths": {
      "@neotracker/*": ["./neotracker-*/src"],
      "*": ["../@types/*"]
    },
    "typeRoots": ["./node_modules/@types/", "./@types/roots"],

    "pretty": true,

    "noEmit": true,
    "declaration": false,

    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false,
    "experimentalDecorators": true,
    "jsx": "react",

    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "allowUnusedLabels": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "../neotracker-server-graphql/src/__generated__/schema.graphql.json",
        "tag": "gql"
      },
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "duplicateProperties": "error",
          "importStatement": "error",
          "boxModel": "ignore",
          "universalSelector": "error",
          "zeroUnits": "error",
          "fontFaceProperties": "error",
          "argumentsInColorFunction": "error",
          "unknownProperties": "error",
          "ieHack": "error",
          "propertyIgnoredDueToDisplay": "error",
          "important": "error",
          "float": "error",
          "idSelector": "error"
        }
      }
    ]
  },
  "exclude": ["cypress"]
}
